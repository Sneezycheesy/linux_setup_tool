set $wpo ~/.config/sway/wpo.sh
    # Workspace definitions
    workspace 1 
    workspace 10 
    workspace 3 
    workspace 4
    workspace 5
    workspace 6
    workspace 7
    workspace 8
    workspace 9
    workspace 2 

